<h1>好きなタレント</h1>

<% @messages.each do |message| %>
  名前:<%= message.name %>
  内容:<%= message.body %>
  性別:<%= message.sex %>
  <br>
<% end %>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name %>

  内容:
  <%= f.text_field :body %>
  性別：
  <%= f.number_field :sex %>
  <%= f.submit %>
<% end %>
